 <text>
  <body>
   <div type="poem" xml:id="C048-K048">
    <pb n="47r"
     facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_100.html"/>
    <lg type="cobla" n="1" xml:id="C048-lg1">
     <l n="1" xml:id="C048-l1"> a B vos me pot amor ben smenar </l>
     <l n="2" xml:id="C048-l2"> Del <choice>
       <abbr>têps</abbr>
       <expan>temps</expan>
      </choice> passat lo seu <choice>
       <abbr>grâ</abbr>
       <expan>gran</expan>
      </choice>
      <choice>
       <abbr>fallimêt</abbr>
       <expan>falliment</expan>
      </choice>
     </l>
     <l n="3" xml:id="C048-l3"> Sa fort dolor per mon mal <choice>
       <abbr>pêsament</abbr>
       <expan>pensament</expan>
      </choice>
     </l>
     <l n="4" xml:id="C048-l4"> Vos mj <choice>
       <abbr>amât</abbr>
       <expan>amant</expan>
      </choice> se pot acabalar </l>
     <l n="5" xml:id="C048-l5"> Yo li perdon si ma dat mal dormjr </l>
     <l n="6" xml:id="C048-l6"> Yo li perdon voler mal guardonat </l>
     <l n="7" xml:id="C048-l7"> Yo li perdon si ma damar forcat </l>
     <l n="8" xml:id="C048-l8"> Dona tan vil quem fas <choice>
       <abbr>vergôyal</abbr>
       <expan>vergonyal</expan>
      </choice> dir </l>
    </lg>
    <pb n="47v"
     facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_101.html"/>
    <lg type="cobla" n="2" xml:id="C048-lg2">
     <l n="9" xml:id="C048-l9">
      <c rend="large">S</c>i cosa fos laugera <choice>
       <abbr>côportar</abbr>
       <expan>comportar</expan>
      </choice>
     </l>
     <l n="10" xml:id="C048-l10"> Que yo dauos agues tal <choice>
       <abbr>vâtamêt</abbr>
       <expan>vantament</expan>
      </choice>
     </l>
     <l n="11" xml:id="C048-l11"> Quem pogues dir esser <choice>
       <abbr>ʋre</abbr>
       <expan>vostre</expan>
      </choice> seruent </l>
     <l n="12" xml:id="C048-l12"> Lo nom sens pus me basta <choice>
       <abbr>contêtar</abbr>
       <expan>contentar</expan>
      </choice>
     </l>
     <l n="13" xml:id="C048-l13"> Tal me pareu <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> si de ferm vos mjr </l>
     <l n="14" xml:id="C048-l14"> Lo meu desitx <choice>
       <abbr>româ</abbr>
       <expan>roman</expan>
      </choice> tal alterat </l>
     <l n="15" xml:id="C048-l15"> Que <add place="interlinear">no</add>
      <del rend="overstrike">n</del>uol <note type="editorial">Escrit nol i corregit uol.</note> res
      del <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> ha desijat</l>
     <l n="16" xml:id="C048-l16"> Ne del present ne del <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> pot venjr </l>
    </lg>
    <lg type="cobla" n="3" xml:id="C048-lg3">
     <l n="17" xml:id="C048-l17"> Creheu de ferm <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> nom vull apartar </l>
     <l n="18" xml:id="C048-l18"> Del <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> sabre <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> serauos plasent </l>
     <l n="19" xml:id="C048-l19"> E sim manau cosa de gran turment </l>
     <l n="20" xml:id="C048-l20"> Sera molt <choice>
       <abbr>leuꝯ</abbr>
       <expan>leuus</expan>
      </choice> carrech de soportar </l>
     <l n="21" xml:id="C048-l21"> Donchs en manar nous cal molt enardir </l>
     <l n="22" xml:id="C048-l22"> Tot se fara lo <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> sera manat </l>
     <l n="23" xml:id="C048-l23"> Ab <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> damor no sia defenssat </l>
     <l n="24" xml:id="C048-l24"> Car mon voler en als no pot seruir </l>
    </lg>
    <lg type="cobla" n="4" xml:id="C048-lg4">
     <l n="25" xml:id="C048-l25"> A cort nous cal en volermj amar </l>
     <l n="26" xml:id="C048-l26"> Si us ne altau e de mon <choice>
       <abbr>sentimêt</abbr>
       <expan>sentiment</expan>
      </choice>
     </l>
     <l n="27" xml:id="C048-l27"> De mon voler creheu <choice>
       <abbr>seguramêt</abbr>
       <expan>segurament</expan>
      </choice>
     </l>
     <l n="28" xml:id="C048-l28"> Que per null temps no us pora <choice>
       <abbr>ƌsaltar</abbr>
       <expan>desaltar</expan>
      </choice>
     </l>
     <l n="29" xml:id="C048-l29"> Ell amara e no fara mentir </l>
     <l n="30" xml:id="C048-l30"> Los meus scrits <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> dell an tant parlat </l>
     <l n="31" xml:id="C048-l31"> Nescarnjra mon vertader dictat </l>
     <l n="32" xml:id="C048-l32"> Ans en millor lo veureu affegir </l>
    </lg>
    <pb n="48r"
     facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_102.html"/>
    <lg type="cobla" n="5" xml:id="C048-lg5">
     <l n="33" xml:id="C048-l33"> A deu nol plach bellea uos donar </l>
     <l n="34" xml:id="C048-l34"> Sino <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> fos damor seruiment </l>
     <l n="35" xml:id="C048-l35"> Car entot lals legra <choice>
       <abbr>bastamêt</abbr>
       <expan>bastament</expan>
      </choice>
     </l>
     <l n="36" xml:id="C048-l36"> En fer tot <choice>
       <abbr>quât</abbr>
       <expan>quant</expan>
      </choice> lo <choice>
       <abbr>mô</abbr>
       <expan>mon</expan>
      </choice> li pot manar </l>
     <l n="37" xml:id="C048-l37"> No sabeu prou si lexau temps fugir </l>
     <l n="38" xml:id="C048-l38"> E <choice>
       <abbr>têps</abbr>
       <expan>temps</expan>
      </choice> perdut no pot esser cobrat </l>
     <l n="39" xml:id="C048-l39"> E donchs restau ab voler termenat </l>
     <l n="40" xml:id="C048-l40"> De ben amar lo quius sabra grair </l>
    </lg>
    <lg type="tornada" n="6" xml:id="C048-lg6">
     <l n="41" xml:id="C048-l41"> Lir entre carts los meus jorns vull finjr </l>
     <l n="42" xml:id="C048-l42"> Amant a vos sols <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> men ajau grat </l>
     <l n="43" xml:id="C048-l43"> E sia mordamar / amj loat </l>
     <l n="44" xml:id="C048-l44"> Creheu lo ferm car no fa <choice>
       <abbr>desmêtir</abbr>
       <expan>desmentir</expan>
      </choice>
     </l>
    </lg>
   </div>
  </body>
