   <text>
      <body>
         <pb n="16v"
            facs="http://www.cervantesvirtual.com/obra-visor/mossen-ausias-march-poeta-manuscrito--0/html/01f733fe-82b2-11df-acc7-002185ce6064_43.html"/>
         <div type="poem" xml:id="C015-G4017">
            <lg type="cobla" n="1" xml:id="C015-01">

               <l n="1" xml:id="C015-1"> Si pres grans mals / <choice>
                     <abbr>vnbȇ</abbr>
                     <expan>vnbem</expan>
                  </choice>
                  <choice>
                     <abbr>şaguardat</abbr>
                     <expan>seraguardat</expan>
                  </choice>
               </l>

               <l n="2" xml:id="C015-2"> mos guanys eplants / endelits <add place="above">se</add>
                  <choice>
                     <abbr>conuertrȃ</abbr>
                     <expan>conuertran</expan>
                  </choice>
               </l>

               <l n="3" xml:id="C015-3"> apres los mals / losbens millors parran </l>

               <l n="4" xml:id="C015-4"> E be no val / mas tant com espreat </l>

               <l n="5" xml:id="C015-5"> Rey pot <choice>
                     <abbr>sş</abbr>
                     <expan>sser</expan>
                  </choice> dit / lo pobre dinssapensa </l>

               <l n="6" xml:id="C015-6">
                  <choice>
                     <abbr>ꝑ</abbr>
                     <expan>per</expan>
                  </choice> vnpetitdo / quelssia offert </l>

               <l n="7" xml:id="C015-7"> elorich hom / dellarguessa desert </l>

               <l n="8" xml:id="C015-8"> gransumador / pobretat nol deffensa </l>
            </lg>
            <pb n="17r"
               facs="http://www.cervantesvirtual.com/obra-visor/mossen-ausias-march-poeta-manuscrito--0/html/01f733fe-82b2-11df-acc7-002185ce6064_44.html"/>
            <lg type="cobla" n="2" xml:id="C015-02">

               <l n="9" xml:id="C015-9"> Mon <choice>
                     <abbr>pensamȇt</abbr>
                     <expan>pensament</expan>
                  </choice> enbolt en amorpensa </l>

               <l n="10" xml:id="C015-10"> comtot sonbe / daquest lloch pus catraure </l>

               <l n="11" xml:id="C015-11"> nopiados amor / lo veu mort jaure </l>

               <l n="12" xml:id="C015-12"> durar no deu / lo comport destoffensa </l>

               <l n="13" xml:id="C015-13">
                  <choice>
                     <abbr>ꝑ</abbr>
                     <expan>per</expan>
                  </choice> mal demi / romp soscostums amor </l>

               <l n="14" xml:id="C015-14"> efamentir / los qui dellanscrit </l>

               <l n="15" xml:id="C015-15"> speriment enmi / es defallit </l>

               <l n="16" xml:id="C015-16"> amor desdiu / ser ental <choice>
                     <abbr>casseñor</abbr>
                     <expan>cassenyor</expan>
                  </choice>
               </l>
            </lg>
            <lg type="cobla" n="3" xml:id="C015-03">

               <l n="17" xml:id="C015-17"> Sicomlo sol / escalfa absa calor </l>

               <l n="18" xml:id="C015-18"> toteslesparts / queson <choice>
                     <abbr>deʝs</abbr>
                     <expan>dejus</expan>
                  </choice> lo çel </l>

               <l n="19" xml:id="C015-19"> escalfamor / cascun debonzel </l>

               <l n="20" xml:id="C015-20"> sinol de vos / qui esple defredor </l>

               <l n="21" xml:id="C015-21"> don ve lo glaç / qui tanta fredorporta </l>

               <l n="22" xml:id="C015-22"> faent contrast / alcalt <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> amorgita </l>

               <l n="23" xml:id="C015-23"> los hermitans / fasurtir del ermita </l>

               <l n="24" xml:id="C015-24"> los grans delits / senten <choice>
                     <abbr>ꝑ</abbr>
                     <expan>per</expan>
                  </choice>estaporta </l>
            </lg>
            <lg type="cobla" n="4" xml:id="C015-04">

               <l n="25" xml:id="C015-25"> Del foch damor / fedra no foch estorta </l>

               <l n="26" xml:id="C015-26"> requerir volch / ypolit son fillastre </l>

               <l n="27" xml:id="C015-27"> ellançalot / ach enamor tal astre </l>

               <l n="28" xml:id="C015-28"> que fon request / <choice>
                     <abbr>ꝑdona</abbr>
                     <expan>perdona</expan>
                  </choice> quim fo morta </l>

               <l n="29" xml:id="C015-29"> O cruelsfats / vos qui fes <choice>
                     <abbr>jutjamȇt</abbr>
                     <expan>jutjament</expan>
                  </choice>
               </l>

               <l n="30" xml:id="C015-30"> queyo amas / vncor decarn tan dur </l>

               <l n="31" xml:id="C015-31"> feu lo <choice>
                     <abbr>ß</abbr>
                     <expan>ser</expan>
                  </choice> moll / manauli que no dur </l>

               <l n="32" xml:id="C015-32">
                  <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> ab ull cast / denegue montalent </l>
            </lg>
            <pb n="17v"
               facs="http://www.cervantesvirtual.com/obra-visor/mossen-ausias-march-poeta-manuscrito--0/html/01f733fe-82b2-11df-acc7-002185ce6064_45.html"/>
            <lg type="cobla" n="5" xml:id="C015-05">

               <l n="33" xml:id="C015-33"> Amor estal / quefets jnjusts conssent </l>

               <l n="34" xml:id="C015-34"> mas james fon / tan jnjust comaquest </l>

               <l n="35" xml:id="C015-35"> car yo guayment / mon <choice>
                     <abbr>şuell</abbr>
                     <expan>seruell</expan>
                  </choice> romp lotest </l>

               <l n="36" xml:id="C015-36"> evossou prop / quem siau mal volent </l>

               <l n="37" xml:id="C015-37"> Mapensa / es en vos pensar enbolta </l>

               <l n="38" xml:id="C015-38"> esli forçat / daltrapart nola tiren </l>

               <l n="39" xml:id="C015-39"> e <choice>
                     <abbr>vrȇs</abbr>
                     <expan>vostres</expan>
                  </choice> ulls / enguardarmi nos giren </l>

               <l n="40" xml:id="C015-40"> emostrenbe / que pensa teniu solta </l>
            </lg>
            <lg type="cobla" n="6" xml:id="C015-06">

               <l n="41" xml:id="C015-41"> Siamat so / festan deu <choice>
                     <abbr>eß</abbr>
                     <expan>esser</expan>
                  </choice> colta </l>

               <l n="42" xml:id="C015-42"> car enlomon / vncor seraguanyat </l>

               <l n="43" xml:id="C015-43"> axi lo cel / fagran solempnitat </l>

               <l n="44" xml:id="C015-44"> com deljnfern / vnarmapot <choice>
                     <abbr>ş</abbr>
                     <expan>ser</expan>
                  </choice> tolta </l>

               <l n="45" xml:id="C015-45"> Los cantadors / abmelodia canten </l>

               <l n="46" xml:id="C015-46"> Los trobadors / afer dictats acuyten </l>

               <l n="47" xml:id="C015-47"> Los aldeans / salten correguenlluyten </l>

               <l n="48" xml:id="C015-48"> Los amadors / damar be no sespanten </l>
            </lg>
            <lg type="tornada" n="7" xml:id="C015-07">

               <l n="49" xml:id="C015-49"> Plena deseny / moltshomensson quis vanten </l>

               <l n="50" xml:id="C015-50"> queanbe vist / amor econegut </l>

               <l n="51" xml:id="C015-51"> portants <choice>
                     <abbr>deaꝗll</abbr>
                     <expan>deaquell</expan>
                  </choice> / scrit enllur scut </l>

               <l n="52" xml:id="C015-52"> nolan sentit / edesosfetssespanten </l>
            </lg>
         </div>
