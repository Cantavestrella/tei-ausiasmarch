   <text>
      <body>
         <pb n="18r"
            facs="http://www.cervantesvirtual.com/obra-visor/mossen-ausias-march-poeta-manuscrito--0/html/01f733fe-82b2-11df-acc7-002185ce6064_46.html"/>
         <div type="poem" xml:id="C016-G4018">
            <lg type="cobla" n="1" xml:id="C016-01">

               <l n="1" xml:id="C016-1"> Junt es lo <choice>
                     <abbr>ŧps</abbr>
                     <expan>temps</expan>
                  </choice>
                  <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> mon goig es complit </l>

               <l n="2" xml:id="C016-2"> en lo sguart <choice>
                     <abbr>ƌl</abbr>
                     <expan>del</expan>
                  </choice>
                  <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> yo desigat </l>

               <l n="3" xml:id="C016-3"> Car vist he ço don era desperat </l>

               <l n="4" xml:id="C016-4"> E molt pus bell <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> djns mj no fon dit </l>

               <l n="5" xml:id="C016-5"> mas de <choice>
                     <abbr>presȇt</abbr>
                     <expan>present</expan>
                  </choice> caich en dolor no llenta </l>

               <l n="6" xml:id="C016-6"> fort es e tant quel cap me fa mudar </l>

               <l n="7" xml:id="C016-7"> torbat <choice>
                     <abbr>ƌl</abbr>
                     <expan>del</expan>
                  </choice> tot mos pasos e cuytar </l>

               <l n="8" xml:id="C016-8"> E trob remey mas de mj nossaprenta </l>

            </lg>
            <lg type="cobla" n="2" xml:id="C016-02">

               <l n="9" xml:id="C016-9"> Si com lexorch qui adeu nosmenta </l>

               <l n="10" xml:id="C016-10"> que li don fills assenats e adrets </l>

               <l n="11" xml:id="C016-11"> E <choice>
                     <abbr>quȃt</abbr>
                     <expan>quant</expan>
                  </choice> los veu <choice>
                     <abbr>eß</abbr>
                     <expan>esser</expan>
                  </choice> folls e contrets </l>

               <l n="12" xml:id="C016-12"> nova dolor <choice>
                     <abbr>davȃt</abbr>
                     <expan>davant</expan>
                  </choice> ell se presenta </l>

               <l n="13" xml:id="C016-13"> napres amj qui tost <choice>
                     <abbr>ŧps</abbr>
                     <expan>temps</expan>
                  </choice> desige </l>

               <l n="14" xml:id="C016-14"> Dona <choice>
                     <abbr>şujr</abbr>
                     <expan>serujr</expan>
                  </choice> on cabes tot mon alt </l>

               <l n="15" xml:id="C016-15"> equant la veig mon cor sarau malalt </l>

               <l n="16" xml:id="C016-16"> creent de cert que nos dolrra de me </l>
            </lg>
            <lg type="cobla" n="3" xml:id="C016-03">

               <l n="17" xml:id="C016-17"> Degran tristor sobres dolor meve </l>

               <l n="18" xml:id="C016-18"> quem cal fugir de cascun lloch escur </l>

               <l n="19" xml:id="C016-19"> Ede gran plor ma pensa fet tal mur </l>

               <l n="20" xml:id="C016-20"> quels pensaments dapnosos lj dete </l>

               <l n="21" xml:id="C016-21"> E son ay tals que si <choice>
                     <abbr>ƌlls</abbr>
                     <expan>dells</expan>
                  </choice> nom defen </l>

               <l n="22" xml:id="C016-22"> Ben enfortjnt ma força mal defesa </l>

               <l n="23" xml:id="C016-23"> tots entraran sients ataula mesa </l>

               <l n="24" xml:id="C016-24"> tremolar sent ja mon entenimen </l>
            </lg>
            <pb n="18v"
               facs="http://www.cervantesvirtual.com/obra-visor/mossen-ausias-march-poeta-manuscrito--0/html/01f733fe-82b2-11df-acc7-002185ce6064_47.html"/>
            <lg type="cobla" n="4" xml:id="C016-04">

               <l n="25" xml:id="C016-25">
                  <choice>
                     <abbr>Deş</abbr>
                     <expan>Desser</expan>
                  </choice> vençut so sobrat nos deffen </l>

               <l n="26" xml:id="C016-26"> es lo tardar quels <choice>
                     <abbr>pensamȇts</abbr>
                     <expan>pensaments</expan>
                  </choice> son glots </l>

               <l n="27" xml:id="C016-27"> sens ferse lloch entrar volrrien tots </l>

               <l n="28" xml:id="C016-28"> e nos pot fer dells ensemps passamen </l>

               <l n="29" xml:id="C016-29"> E sil pus flach <choice>
                     <abbr>pensamȇt</abbr>
                     <expan>pensament</expan>
                  </choice> es <choice>
                     <abbr>ṗmer</abbr>
                     <expan>primer</expan>
                  </choice>
               </l>

               <l n="30" xml:id="C016-30">
                  <choice>
                     <abbr>lentenimȇt</abbr>
                     <expan>lenteniment</expan>
                  </choice> forçara de fugir </l>

               <l n="31" xml:id="C016-31"> en llur debat es mon ben avenjr </l>

               <l n="32" xml:id="C016-32"> llur pau es port <choice>
                     <abbr>daꝗll</abbr>
                     <expan>daquell</expan>
                  </choice> meu jorn darrer </l>
            </lg>
            <lg type="cobla" n="5" xml:id="C016-05">

               <l n="33" xml:id="C016-33"> Pejor que mort es vida sens plaer </l>

               <l n="34" xml:id="C016-34"> mas nom acus <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> fenesca mavida </l>

               <l n="35" xml:id="C016-35"> car mentres visch no pot <choice>
                     <abbr>eş</abbr>
                     <expan>esser</expan>
                  </choice> perida </l>

               <l n="36" xml:id="C016-36"> vna dolor juntab algun sper </l>

               <l n="37" xml:id="C016-37"> Nese donve mas depor de natura </l>

               <l n="38" xml:id="C016-38"> que no consent contra mort gran sforç </l>

               <l n="39" xml:id="C016-39"> e per aço contra mon cas mesforç </l>

               <l n="40" xml:id="C016-40"> per no complir ma gran desaventura </l>
            </lg>
            <lg type="tornada" n="6" xml:id="C016-06">

               <l n="41" xml:id="C016-41"> Plena de seny en home foll attura </l>

               <l n="42" xml:id="C016-42"> lamoltamor ab vana esperança </l>

               <l n="43" xml:id="C016-43"> Car pren tal born <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> cerca tota frança </l>

               <l n="44" xml:id="C016-44"> daquest gran vol la rrao ne mormura </l>
            </lg>
         </div>
