   <text>
      <body>
         <pb n="36r"
            facs="http://www.cervantesvirtual.com/obra-visor/poetas-catalanes-manuscrito-biblioteca-de-la-universidad-de-zaragoza-manuscrit--0/html/01660e74-82b2-11df-acc7-002185ce6064_54.html"/>
         <div type="poem" xml:id="C017-H031">
            <lg type="cobla" n="1" xml:id="C017-01">

               <l n="1" xml:id="C017-1"> Si deu del cors la mjarma sostrau </l>

               <l n="2" xml:id="C017-2"> Nom playeran sino mos cars parents </l>

               <l n="3" xml:id="C017-3"> Car mos amats / nom son tan ben volents </l>

               <l n="4" xml:id="C017-4"> Quen aquel cars nols calge dir plorau </l>

               <l n="5" xml:id="C017-5"> Escas loger es dat amon treball </l>

               <l n="6" xml:id="C017-6"> Com no so plant de pena sostenguda </l>

               <l n="7" xml:id="C017-7"> E si raho pot esser conaguda </l>

               <l n="8" xml:id="C017-8"> Colpa no han pus bon voler loscall </l>
            </lg>
            <pb n="36v"
               facs="http://www.cervantesvirtual.com/obra-visor/poetas-catalanes-manuscrito-biblioteca-de-la-universidad-de-zaragoza-manuscrit--0/html/01660e74-82b2-11df-acc7-002185ce6064_55.html"/>
            <lg type="cobla" n="2" xml:id="C017-02">

               <l n="9" xml:id="C017-9"> E daçom planch e quedament traball </l>

               <l n="10" xml:id="C017-10"> E dins mj plor e calle com amut </l>

               <l n="11" xml:id="C017-11"> E firme çell <choice>
                     <abbr>ꝙm</abbr>
                     <expan>quim</expan>
                  </choice> degra ser escut </l>

               <l n="12" xml:id="C017-12"> Tencant mon cor e crit de mj sall </l>

               <l n="13" xml:id="C017-13"> Cest es amor <choice>
                     <abbr>ꝙm</abbr>
                     <expan>quim</expan>
                  </choice> trenca lo pensar </l>

               <l n="14" xml:id="C017-14"> Que <choice>
                     <abbr>ꝑ</abbr>
                     <expan>per</expan>
                  </choice> null temps sere per vos amat </l>

               <l n="15" xml:id="C017-15"> E per aço jom trop desasforçat </l>

               <l n="16" xml:id="C017-16"> Car tot asaig porta nos lesperar </l>
            </lg>
            <lg type="cobla" n="3" xml:id="C017-03">

               <l n="17" xml:id="C017-17"> Dels amadors me vull ben jnformar </l>

               <l n="18" xml:id="C017-18"> Hon es amor en desesperat cor </l>

               <l n="19" xml:id="C017-19"> E si es viu / per <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> de fet no mor </l>

               <l n="20" xml:id="C017-20"> Com per amor / no pot amor mostrar </l>

               <l n="21" xml:id="C017-21"> No dire pus mas contemple cascu </l>

               <l n="22" xml:id="C017-22"> Lestat daquell <choice>
                     <abbr>ꝙ</abbr>
                     <expan>qui</expan>
                  </choice> en tall cas se veu </l>

               <l n="23" xml:id="C017-23"> Mas guay de mj <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> tot lo cas es meu </l>

               <l n="24" xml:id="C017-24"> Donchs no deu fer / <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> non plore algu/ </l>
            </lg>
            <lg type="cobla" n="4" xml:id="C017-04">

               <l n="25" xml:id="C017-25"> Los mals damor son pochs al juy comu </l>

               <l n="26" xml:id="C017-26"> Car en pochs cau aquesta pacio </l>

               <l n="27" xml:id="C017-27"> E tal dolor no la sent la raho </l>

               <l n="28" xml:id="C017-28"> Sino asi no pot jutiar algu </l>

               <l n="29" xml:id="C017-29"> Aquell coneix la dolor dela mort </l>

               <l n="30" xml:id="C017-30"> Quin força es / esperant reb<add place="above">r</add>e
                  volta </l>

               <l n="31" xml:id="C017-31"> E çell <choice>
                     <abbr>ꝙ</abbr>
                     <expan>qui</expan>
                  </choice> ha sa vidan dellit bolta </l>

               <l n="32" xml:id="C017-32"> De tall dolor no pot fer bon report </l>
            </lg>
            <lg type="cobla" n="5" xml:id="C017-05">

               <l n="33" xml:id="C017-33"> Es veritat si portam en recort </l>

               <l n="34" xml:id="C017-34"> Que molts passats morir ne sostangeran </l>

               <l n="35" xml:id="C017-35"> Conexerem quanta dolor agueran </l>

               <l n="36" xml:id="C017-36"> Puys <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> morir / los fon mjllor soport </l>
               <pb n="37r"
                  facs="http://www.cervantesvirtual.com/obra-visor/poetas-catalanes-manuscrito-biblioteca-de-la-universidad-de-zaragoza-manuscrit--0/html/01660e74-82b2-11df-acc7-002185ce6064_56.html"/>
               <l n="37" xml:id="C017-37"> Sens causa gran nul acte gran sefa </l>

               <l n="38" xml:id="C017-38"> Perço cascu / pot auer conaxença </l>

               <l n="39" xml:id="C017-39"> Quel hom auent de mort poca temença </l>

               <l n="40" xml:id="C017-40"> Tant ardiment gran dolor lo porta </l>
            </lg>
            <lg type="cobla" n="6" xml:id="C017-06">

               <l n="41" xml:id="C017-41"> Metien lo mon saber no li basta </l>

               <l n="42" xml:id="C017-42"> Sentir lo mal <choice>
                     <abbr>ꝗ</abbr>
                     <expan>que</expan>
                  </choice> lo malalt soferta </l>

               <l n="43" xml:id="C017-43"> Mas per senyals en la part descuberta </l>

               <l n="44" xml:id="C017-44"> Pora jutiar lom en <choice>
                     <abbr>ꝙn</abbr>
                     <expan>quin</expan>
                  </choice> punt esta </l>

               <l n="45" xml:id="C017-45"> En axin pren al hom damor punçell </l>

               <l n="46" xml:id="C017-46"> No pot sentir / pasio mas veu lacte </l>

               <l n="47" xml:id="C017-47"> Dayçell <choice>
                     <abbr>quɉ</abbr>
                     <expan>quin</expan>
                  </choice> si / porta lo gran cara<add place="above">c</add>te </l>

               <l n="48" xml:id="C017-48"> Damor quj may contra si vol consell </l>
            </lg>
            <lg type="cobla" n="7" xml:id="C017-07">

               <l n="49" xml:id="C017-49"> Si com enpeny balesta lo cadrell </l>

               <l n="50" xml:id="C017-50"> Aytant com pus / la sua força basta </l>

               <l n="51" xml:id="C017-51"> La volentat / del hom o dona casta </l>

               <l n="52" xml:id="C017-52"> Tan quant amor sa forçasten en ell </l>

               <l n="53" xml:id="C017-53"> En contramor no valge saujessa </l>

               <l n="54" xml:id="C017-54"> Sino daujd sen fora be deffes </l>

               <l n="55" xml:id="C017-55"> E saujs molts / no agren tant empres </l>

               <l n="56" xml:id="C017-56"> Si contramor valges algunan pressa </l>
            </lg>
            <lg type="cobla" n="8" xml:id="C017-08">

               <l n="57" xml:id="C017-57"> Plena de seny / per no esser entessa </l>

               <l n="58" xml:id="C017-58"> La mjamor / porascapar sens merit </l>

               <l n="59" xml:id="C017-59"> E sab me greu / com no aureu demerjt </l>

               <l n="60" xml:id="C017-60"> Per mon perlar / no faent laus palesa/ </l>
            </lg>
         </div>
