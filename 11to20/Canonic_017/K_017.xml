    <text>
        <body>
            <pb n="17v"
                facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_41.html"/>
            <div type="poem" xml:id="C017-K017">
                <lg type="cobla" n="1" xml:id="C017-01">

                    <l n="1" xml:id="C017-1"> s I deu del cos lamjarma sostrau</l>

                    <l n="2" xml:id="C017-2"> Nom <choice>
                            <abbr>planyerȃ</abbr>
                            <expan>planyeran</expan>
                        </choice> sino mos cars <choice>
                            <abbr>parȇts</abbr>
                            <expan>parents</expan>
                        </choice></l>

                    <l n="3" xml:id="C017-3"> Car mos amats no son tan <choice>
                            <abbr>benuolȇts</abbr>
                            <expan>benuolents</expan>
                        </choice></l>

                    <l n="4" xml:id="C017-4">
                        <choice>
                            <abbr>Quenaꝗll</abbr>
                            <expan>Quenaquell</expan>
                        </choice> cas nols calga dir plorau</l>

                    <l n="5" xml:id="C017-5"> Scas loguer es dat amon treball</l>

                    <l n="6" xml:id="C017-6"> Com no so plant de pena <choice>
                            <abbr>sostȇguda</abbr>
                            <expan>sostenguda</expan>
                        </choice></l>

                    <l n="7" xml:id="C017-7"> E si raho pot esser coneguda</l>

                    <l n="8" xml:id="C017-8"> Colpa non <choice>
                            <abbr>hȃ</abbr>
                            <expan>han</expan>
                        </choice> puys bon voler los call</l>
                </lg>

                <lg type="cobla" n="2" xml:id="C017-02">

                    <l n="9" xml:id="C017-9"> E daçom planch e <choice>
                            <abbr>quedamȇt</abbr>
                            <expan>quedament</expan>
                        </choice> treball</l>

                    <l n="10" xml:id="C017-10"> E dins mj plor e calle <choice>
                            <abbr>cȏ</abbr>
                            <expan>com</expan>
                        </choice> amut</l>
                    <pb n="18r"
                        facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_42.html"/>

                    <l n="11" xml:id="C017-11"> E fer me çell quim degraser scut</l>

                    <l n="12" xml:id="C017-12"> Trencant <choice>
                            <abbr>mȏ</abbr>
                            <expan>mon</expan>
                        </choice> cor e crit de mi no sall</l>

                    <l n="13" xml:id="C017-13"> Damor o dich quim trenca lo <choice>
                            <abbr>pȇssar</abbr>
                            <expan>penssar</expan>
                        </choice></l>

                    <l n="14" xml:id="C017-14"> Que per null <choice>
                            <abbr>ŧps</abbr>
                            <expan>temps</expan>
                        </choice> sere dauos amat</l>

                    <l n="15" xml:id="C017-15"> E per aço yom trobe desesforcat</l>

                    <l n="16" xml:id="C017-16"> Car tot assatx se causa <choice>
                            <abbr>desesꝑar</abbr>
                            <expan>desesperar</expan>
                        </choice></l>
                </lg>

                <lg type="cobla" n="3" xml:id="C017-03">

                    <l n="17" xml:id="C017-17"> Dels amados me vull ben jnformar</l>

                    <l n="18" xml:id="C017-18"> Hon es amor en <choice>
                            <abbr>desesꝑat</abbr>
                            <expan/>
                        </choice> cor</l>

                    <l n="19" xml:id="C017-19"> E si es viu <choice>
                            <abbr>ꝑ</abbr>
                            <expan>per</expan>
                        </choice>
                        <choice>
                            <abbr>ꝗ</abbr>
                            <expan>que</expan>
                        </choice> de fet no mor</l>

                    <l n="20" xml:id="C017-20"> Com per amor no pot amor mostrar</l>

                    <l n="21" xml:id="C017-21"> No dire pus mas contemple quascu</l>

                    <l n="22" xml:id="C017-22"> Lestat <choice>
                            <abbr>daꝗll</abbr>
                            <expan>daquell</expan>
                        </choice> quintal cas se veu</l>

                    <l n="23" xml:id="C017-23"> Mas quay de mj <choice>
                            <abbr>ꝗ</abbr>
                            <expan>que</expan>
                        </choice> tot lo cas es meu</l>

                    <l n="24" xml:id="C017-24"> Donchs no deu ser <choice>
                            <abbr>ꝗ</abbr>
                            <expan>que</expan>
                        </choice>
                        <choice>
                            <abbr>nȏ</abbr>
                            <expan>nom</expan>
                        </choice> plor<add place="above">e</add>algua</l>
                </lg>

                <lg type="cobla" n="4" xml:id="C017-04">

                    <l n="25" xml:id="C017-25"> Los mals damor son pochs al juy comu</l>

                    <l n="26" xml:id="C017-26"> Car enpochs es <choice>
                            <abbr>aꝗsta</abbr>
                            <expan>aquesta</expan>
                        </choice> patio</l>

                    <l n="27" xml:id="C017-27"> E tal dolor no la sent la raho</l>

                    <l n="28" xml:id="C017-28"> Si no assi no pot jutjar algu</l>

                    <l n="29" xml:id="C017-29"> Aquell conex la dolor <choice>
                            <abbr>ƌla</abbr>
                            <expan>dela</expan>
                        </choice> mort</l>

                    <l n="30" xml:id="C017-30"> Quin forca es volent li donar volta</l>

                    <l n="31" xml:id="C017-31"> E çell qui te sa <choice>
                            <abbr>vidȃ</abbr>
                            <expan>vidan</expan>
                        </choice> delits volta</l>

                    <l n="32" xml:id="C017-32"> De tal dolor no pot fer bon report</l>
                </lg>

                <pb n="18v"
                    facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_43.html"/>
                <lg type="cobla" n="5" xml:id="C017-05">

                    <l n="33" xml:id="C017-33"> Es veritat si <choice>
                            <abbr>portȃ</abbr>
                            <expan>portan</expan>
                        </choice> en recort</l>

                    <l n="34" xml:id="C017-34"> Que molts passats morir ne <choice>
                            <abbr>sostȋguerȇ</abbr>
                            <expan>sostingueren</expan>
                        </choice></l>

                    <l n="35" xml:id="C017-35"> Conexerem <choice>
                            <abbr>quȃta</abbr>
                            <expan>quanta</expan>
                        </choice> dolor <choice>
                            <abbr>haguerȇ</abbr>
                            <expan>hagueren</expan>
                        </choice></l>

                    <l n="36" xml:id="C017-36"> Puys <choice>
                            <abbr>ꝗ</abbr>
                            <expan>que</expan>
                        </choice> morir los fon mjllor soport</l>

                    <l n="37" xml:id="C017-37"> Sen causa gran null acte <choice>
                            <abbr>grȃ</abbr>
                            <expan>gran</expan>
                        </choice> se fa</l>

                    <l n="38" xml:id="C017-38"> Per ço quascu pot hauer conexensa</l>

                    <l n="39" xml:id="C017-39"> Quel hom hauent demort poca temensa</l>

                    <l n="40" xml:id="C017-40"> Tan foll gozar gran dolor lo porta</l>
                </lg>

                <lg type="cobla" n="6" xml:id="C017-06">

                    <l n="41" xml:id="C017-41"> Metien lo mon saber noli basta</l>

                    <l n="42" xml:id="C017-42"> Sentir lo mal <choice>
                            <abbr>ꝗ</abbr>
                            <expan>que</expan>
                        </choice> lo malalt soferta</l>

                    <l n="43" xml:id="C017-43"> Mas per senyals en la part descuberta</l>

                    <l n="44" xml:id="C017-44"> Pora jutiar lom en quin <choice>
                            <abbr>pȗt</abbr>
                            <expan>punt</expan>
                        </choice> esta</l>

                    <l n="45" xml:id="C017-45"> Enaxin pren al hom damor punçell</l>

                    <l n="46" xml:id="C017-46"> No pot sentir patio mes veu lacte</l>

                    <l n="47" xml:id="C017-47"> Dayçel <del rend="overstrike">quen si</del> quensi
                        porta lo <choice>
                            <abbr>grȃ</abbr>
                            <expan>gran</expan>
                        </choice> caracte</l>

                    <l n="48" xml:id="C017-48"> Damor qui may contra si vol conçell</l>
                </lg>

                <lg type="cobla" n="7" xml:id="C017-07">

                    <l n="49" xml:id="C017-49"> Si com enpeny ballesta lo quadrell</l>

                    <l n="50" xml:id="C017-50"> Aytant com pus la sua força basta</l>

                    <l n="51" xml:id="C017-51"> La voluntat del hom o donas casta</l>

                    <l n="52" xml:id="C017-52"> Tant quant amor sa força sten enell</l>

                    <l n="53" xml:id="C017-53"> En contramor no valgue sauiesa</l>

                    <l n="54" xml:id="C017-54"> Sino david sen fora be defes</l>

                    <l n="55" xml:id="C017-55"> E sauis molts no <choice>
                            <abbr>aguerȇ</abbr>
                            <expan>agueren</expan>
                        </choice>
                        <choice>
                            <abbr>tȃt</abbr>
                            <expan>tant</expan>
                        </choice> enpes</l>

                    <l n="56" xml:id="C017-56"> Si contramor valgues <choice>
                            <abbr>algunȃpresa</abbr>
                            <expan>algunanpresa</expan>
                        </choice></l>
                </lg>

                <pb n="19r"
                    facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_44.html"/>
                <lg type="tornada" n="8" xml:id="C017-08">

                    <l n="57" xml:id="C017-57"> Plena de seny per no esser entesa</l>

                    <l n="58" xml:id="C017-58"> La miamor poras capar sens merit</l>

                    <l n="59" xml:id="C017-59"> E sab me greu com no haureu demerit</l>

                    <l n="60" xml:id="C017-60"> Per mon parlar no faent laus palesa</l>

                </lg>
            </div>
