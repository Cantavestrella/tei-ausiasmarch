    <text>
        <body>
            <div type="poem" xml:id="C007-F007">
                <pb n="6r"
                    facs="http://www.cervantesvirtual.com/obra-visor/poesias-de-ausias-y-mena-manuscrito--0/html/0165fe84-82b2-11df-acc7-002185ce6064_15.html"/>
                <lg type="cobla" n="1" xml:id="C0007-1">
                    <l n="1" xml:id="C007-1"> Si com rictat no porta bens ab si</l>
                    <l n="2" xml:id="C007-2"> Mas ual aytant com cell qujn es seny</l>
                    <l n="3" xml:id="C007-3"> Amor no ual poch com tot enamorat</l>
                    <l n="4" xml:id="C007-4"> Mancha bufant orgue fals no ret fi</l>
                    <l n="5" xml:id="C007-5"> Amor ual poch com tot enamorat</l>
                    <l n="6" xml:id="C007-6"> Ha falsedat en son pits fals enclosa</l>
                    <l n="7" xml:id="C007-7"> O es ajunt ab vna tal s<note>Consonant solta sense
                            marca de correcció</note> esposa</l>
                    <l n="8" xml:id="C007-8"> Peguea es son dret nom apellat</l>
                </lg>
                <lg type="cobla" n="2" xml:id="C0007-2">
                    <l n="9" xml:id="C007-9"> Amor no pot hauer desordenat</l>
                    <l n="10" xml:id="C007-10"> Co que <choice>
                            <abbr>dę</abbr>
                            <expan>deus</expan>
                        </choice> fa natura mjgancant</l>
                    <l n="11" xml:id="C007-11"> Car home pech no pot ser fin amant</l>
                    <l n="12" xml:id="C007-12"> Ne lo suptil contra sa calitat</l>
                    <l n="13" xml:id="C007-13"> Mal pendra pint en laygua sa figura</l>
                    <l n="14" xml:id="C007-14"> Molt menys amor pendra lono dispost</l>
                    <l n="15" xml:id="C007-15"> Ne pot estar laygua dins vn loch rost</l>
                    <l n="16" xml:id="C007-16"> Axi amor en cap dom foll atura</l>
                </lg>
                <lg type="cobla" n="3" xml:id="C0007-3">
                    <l n="17" xml:id="C007-17"> Per ben amar ab angoxossa cura</l>
                    <l n="18" xml:id="C007-18"> En temps passats eren ladonchs uolguts</l>
                    <l n="19" xml:id="C007-19"> Ouidil prous dix quamor es crescuts</l>
                    <l n="20" xml:id="C007-20"> Per altramor demostrant sa factura</l>
                    <l n="21" xml:id="C007-21"> Verdader fon son dit e sos presichs</l>
                    <l n="22" xml:id="C007-22"> Tant quant amor fon prop de conexenca</l>
                    <l n="23" xml:id="C007-23"> Mas en est cas entrellss ha mal uolenca</l>
                    <l n="24" xml:id="C007-24"> Tal que no creu null temps sien amjchs</l>
                </lg>
                <pb n="6v"
                    facs="http://www.cervantesvirtual.com/obra-visor/poesias-de-ausias-y-mena-manuscrito--0/html/0165fe84-82b2-11df-acc7-002185ce6064_16.html"/>
                <lg type="cobla" n="4" xml:id="C0007-4">
                    <l n="25" xml:id="C007-25"> Si fossem nats uos e yoentrels antichs</l>
                    <l n="26" xml:id="C007-26"> Lay quant amor amant se conqueria</l>
                    <l n="27" xml:id="C007-27"> Sens praticar alguna maestria</l>
                    <l n="28" xml:id="C007-28"> Lo uostre cor no fora tan jnichs</l>
                    <l n="29" xml:id="C007-29"> E nuos conech gran disposicio</l>
                    <l n="30" xml:id="C007-30"> Defer tot co que gentilea mana</l>
                    <l n="31" xml:id="C007-31"> Mas criament ueg que naturangana</l>
                    <l n="32" xml:id="C007-32"> Car viurab mals es dom perdicio</l>
                </lg>
                <lg type="cobla" n="5" xml:id="C0007-5">
                    <l n="33" xml:id="C007-33"> Per mal grahir ne per mala saho</l>
                    <l n="34" xml:id="C007-34"> Mon cor no pot amor desemparar</l>
                    <l n="35" xml:id="C007-35"> Deuotament los me plau remembrar</l>
                    <l n="36" xml:id="C007-36"> Aquells passats aquj don <choice>
                            <abbr>dę</abbr>
                            <expan>deus</expan>
                        </choice> perdo</l>
                    <l n="37" xml:id="C007-37"> E com sere trespassat daquest mon</l>
                    <l n="38" xml:id="C007-38"> Letres diran sobre la mja tomba</l>
                    <l n="39" xml:id="C007-39"> Plena de seny no tingau agran bomba</l>
                    <l n="40" xml:id="C007-40"> Car per uos muyr e uag no sabent hon</l>
                </lg>
                <lg type="cobla" n="6" xml:id="C0007-6">
                    <l n="41" xml:id="C007-41"> Enueiastal que tot primor confon</l>
                    <l n="42" xml:id="C007-42"> A tots aquells quj ab si lasajusten</l>
                    <l n="43" xml:id="C007-43"> Los enueiats vn poch ne molt no gusten</l>
                    <l n="44" xml:id="C007-44"> Aquell mal tast quels enueiosos fon</l>
                    <l n="45" xml:id="C007-45"> Tal es amor car yo qui lam ajust</l>
                    <l n="46" xml:id="C007-46"> Sent grans dolors dant me folls mouiments</l>
                    <l n="47" xml:id="C007-47"> E uos haueu daco tals sentiments</l>
                    <l n="48" xml:id="C007-48"> Com fort destral ha de tallar molt fust</l>
                </lg>
                <pb n="7r"
                    facs="http://www.cervantesvirtual.com/obra-visor/poesias-de-ausias-y-mena-manuscrito--0/html/0165fe84-82b2-11df-acc7-002185ce6064_17.html"/>
                <lg type="cobla" n="7" xml:id="C0007-7">
                    <l n="49" xml:id="C007-49"> Si com adam pres mal del vedat gust</l>
                    <l n="50" xml:id="C007-50"> Com sa muller li mostra mal camj</l>
                    <l n="51" xml:id="C007-51"> Dient adam mengem daquest boci</l>
                    <l n="52" xml:id="C007-52"> E senblarem adeu quj es tot just</l>
                    <l n="53" xml:id="C007-53"> Ne pren amj qui mon seny ha cregut</l>
                    <l n="54" xml:id="C007-54"> La uoluntat fent li <choice>
                            <abbr>ƥmjssio</abbr>
                            <expan>promjssio</expan>
                        </choice></l>
                    <l n="55" xml:id="C007-55"> Que ben seruint aconseguia do</l>
                    <l n="56" xml:id="C007-56"> que per null temps tal no fo conegut</l>
                </lg>
                <lg type="cobla" n="8" xml:id="C0007-8">
                    <l n="57" xml:id="C007-57"> Per mal seruir no crech laia perdut</l>
                    <l n="58" xml:id="C007-58"> Car sills treballs hagues soferts <choice>
                            <abbr>ꝑ</abbr>
                            <expan>per</expan>
                        </choice> deu</l>
                    <l n="59" xml:id="C007-59"> Cors glorios foran lo regne seu</l>
                    <l n="60" xml:id="C007-60"> E ia plorant souin me trobe mut</l>
                    <l n="61" xml:id="C007-61"> Sim fos donat aquest temps en entendre</l>
                    <l n="62" xml:id="C007-62"> Los grans secrets enclosos en natura</l>
                    <l n="63" xml:id="C007-63"> No foral mon cosa quem fos escura</l>
                    <l n="64" xml:id="C007-64"> Dels fets diuins gran part me pogra tendre</l>
                </lg>
                <lg type="cobla" n="9" xml:id="C0007-9">
                    <l n="65" xml:id="C007-65"> Plena de seny tot mon seny uull despendre</l>
                    <l n="66" xml:id="C007-66"> Amant auos sens algun grat cossegre</l>
                    <l n="67" xml:id="C007-67"> E durara fins que del riu de segre</l>
                    <l n="68" xml:id="C007-68"> Laygua corrent damunt sepugastrendre</l>
                </lg>
            </div>
