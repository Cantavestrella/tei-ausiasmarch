 <text>
  <body>
   <div type="poem" xml:id="C024-K024">
    <pb n="25r" facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_56.html"/>
    <lg type="cobla" n="1" xml:id="C024-lg1">
     <l n="1" xml:id="C024-l1"> n O sech lo temps <choice>
      <abbr>mȏ</abbr>
       <expan>mon</expan>
      </choice>
      <choice>
       <abbr>pensamȇt</abbr>
       <expan>pensament</expan>
      </choice> jmmoble </l>
     <l n="2" xml:id="C024-l2"> Car nos traspost de vn esser en altre </l>
     <l n="3" xml:id="C024-l3"> Fortuna vol son torn variat perdre </l>
     <l n="4" xml:id="C024-l4"> Si camistat ab fermetat acapta </l>
     <l n="5" xml:id="C024-l5"> Quant ma sentit al pus jus <choice>
      <abbr>ƌ</abbr>
       <expan>de</expan>
      </choice>son <choice>
       <abbr>ce˝tre</abbr>
       <expan>centre</expan>
      </choice>
     </l>
     <l n="6" xml:id="C024-l6"> Aspres ha fets los <choice>
      <abbr>corrȏs</abbr>
       <expan>corrons</expan>
      </choice>
      <choice>
       <abbr>ƌ</abbr>
       <expan>de</expan>
      </choice> sa roda </l>
     <l n="7" xml:id="C024-l7"> Perqualli sant en altre torn no <choice>
      <abbr>mȗte</abbr>
       <expan>munte</expan>
      </choice>
     </l>
     <l n="8" xml:id="C024-l8"> A seure lla hon es lo <choice>
      <abbr>grȃ</abbr>
       <expan>gran</expan>
      </choice>
      <choice>
       <abbr>ƌsorde</abbr>
       <expan>desorde</expan>
      </choice>
     </l>
    </lg>
    <lg type="cobla" n="2" xml:id="C024-lg2">
     <l n="9" xml:id="C024-l9"> <c rend="large">C</c>om lenveios <choice>
      <abbr>ꝙ</abbr>
       <expan>qui</expan>
      </choice> soberch dan vol rebre </l>
     <l n="10" xml:id="C024-l10">
      <choice>
       <abbr>Perꝑ</abbr>
       <expan>Perque</expan>
      </choice> maior dan son desamich senta </l>
     <l n="11" xml:id="C024-l11"> E pren delit del mal <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> beu sofferre </l>
     <l n="12" xml:id="C024-l12"> Tant <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> no sent lomal quil es prohisme </l>
     <l n="13" xml:id="C024-l13"> Tal semblant cas fortunab mi pratica </l>
     <l n="14" xml:id="C024-l14"> Faent proces ason delit <choice>
      <abbr>ƌ</abbr>
       <expan>de</expan>
      </choice> nulle </l>
     <l n="15" xml:id="C024-l15"> Mudas lo nom <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice>
      <choice>
       <abbr>prȇ</abbr>
       <expan>pren</expan>
      </choice> desser no ferma </l>
     <l n="16" xml:id="C024-l16"> Pert son plaer per no dar <choice>
      <abbr>tṁps</abbr>
       <expan>temps</expan>
      </choice> al vogi </l>
    </lg>
    <lg type="cobla" n="3" xml:id="C024-lg3">
     <l n="17" xml:id="C024-l17"> <c rend="large">S</c>i com çel <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> dorm ab artifiçi </l>
     <l n="18" xml:id="C024-l18"> Son cos <choice>
      <abbr>perꝗ</abbr>
       <expan>perque</expan>
      </choice> la dolor no sufferte </l>
     <pb n="25v" facs="http://www.cervantesvirtual.com/obra-visor/les-obres-de-mossen-ausias-march-sont-acabada-de-scriure-la-present-obra-per-m-pere-vilaraso-prevere-per-manament-de-lilltre-sor-almirant-de-napols-manuscrit--0/html/00488f44-82b2-11df-acc7-002185ce6064_57.html"/>
     <l n="19" xml:id="C024-l19"> Volgra sofrir los <choice>
      <abbr>pȇsaments</abbr>
       <expan>pensaments</expan>
      </choice>
      <choice>
       <abbr>ɉn</abbr>
       <expan>quinporta</expan>
      </choice>
     </l>
     <l n="20" xml:id="C024-l20"> Cosas <choice>
      <abbr>aꝗ</abbr>
       <expan>aque</expan>
      </choice> ma voluntat sinclina </l>
     <l n="21" xml:id="C024-l21"> Causant en mi cobeiança terrible </l>
     <l n="22" xml:id="C024-l22"> Passionant larma qui es aiunta </l>
     <l n="23" xml:id="C024-l23"> En sufertar aquest turment tan aspre </l>
     <l n="24" xml:id="C024-l24"> Ab lo meu cos quin tal cas <choice>
      <abbr>lacȏpanya</abbr>
       <expan>lacompanya</expan>
      </choice>
     </l>
    </lg>
    <lg type="cobla" n="4" xml:id="C024-lg4">
     <l n="25" xml:id="C024-l25"> <c rend="large">S</c>i col castor caçat per mort storçre </l>
     <l n="26" xml:id="C024-l26"> Tirant ab dents part <choice>
      <abbr>ƌ</abbr>
       <expan>de</expan>
      </choice> son cors <choice>
       <abbr>arrȃcha</abbr>
       <expan>arrancha</expan>
      </choice>
     </l>
     <l n="27" xml:id="C024-l27">
      <choice>
       <abbr>Pergrȃ</abbr>
       <expan>Pergran</expan>
      </choice> estint <choice>
       <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> natura li dona </l>
     <l n="28" xml:id="C024-l28"> Sent <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> la mort li portan <choice>
       <abbr>aꝗlls</abbr>
       <expan>aquells</expan>
      </choice>
      <choice>
       <abbr>mṁbres</abbr>
       <expan>membres</expan>
      </choice>
     </l>
     <l n="29" xml:id="C024-l29"> Per ma raho volgrauer <choice>
      <abbr>conȇxça</abbr>
       <expan>conexença</expan>
      </choice>
     </l>
     <l n="30" xml:id="C024-l30"> Posant menys preu als desitxs <choice>
      <abbr>quɉ</abbr>
       <expan>quim</expan>
      </choice>
      <choice>
       <abbr>tormȇta</abbr>
       <expan>tormenta</expan>
      </choice>
     </l>
     <l n="31" xml:id="C024-l31"> Matant lo cos en pecadant <choice>
      <abbr>ṁ</abbr>
       <expan>me</expan>
      </choice> larma </l>
     <l n="32" xml:id="C024-l32"> Si <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> jaquir los me coue per viure </l>
    </lg>
    <lg type="cobla" n="5" xml:id="C024-lg5">
     <l n="33" xml:id="C024-l33"> <c rend="large">E</c>n <choice>
      <abbr>aꝗll</abbr>
       <expan>aquell</expan>
      </choice> punt <choice>
       <abbr>ꝗl</abbr>
       <expan>quel</expan>
      </choice> cobeiar <choice>
       <abbr>ṁ</abbr>
       <expan>me</expan>
      </choice> sobta </l>
     <l n="34" xml:id="C024-l34"> Volgra ser foll ab la pensa tan vana </l>
     <l n="35" xml:id="C024-l35"> Que no penssas pus <choice>
      <abbr>autęurat</abbr>
       <expan>auenturat</expan>
      </choice> home </l>
     <l n="36" xml:id="C024-l36"> Fortunagues prosperat <choice>
      <abbr>ƌ</abbr>
       <expan>de</expan>
      </choice> bens mobles </l>
     <l n="37" xml:id="C024-l37"> En gran calor lo fret totom desije </l>
     <l n="38" xml:id="C024-l38"> Ne creure pot <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> liuern james torne </l>
     <l n="39" xml:id="C024-l39"> Axi <choice>
      <abbr>ṁ</abbr>
       <expan>men</expan>
      </choice> pren com dolos <choice>
       <abbr>ṁ</abbr>
       <expan>me</expan>
      </choice>
      <choice>
       <abbr>congoxȇ</abbr>
       <expan>congoxen</expan>
      </choice>
     </l>
     <l n="40" xml:id="C024-l40"> Creure no puch quen part <choice>
      <abbr>ƌ</abbr>
       <expan>de</expan>
      </choice>
      <choice>
       <abbr>cȏtent</abbr>
       <expan>content</expan>
      </choice> basta </l>
    </lg>
    <lg type="tornada" n="6" xml:id="C024-lg6">
     <l n="41" xml:id="C024-l41"> <c rend="large">L</c>ir entre carts si lo comu enginy </l>
     <l n="42" xml:id="C024-l42"> Es tan grocer <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> nous bast a <choice>
       <abbr>cȏpedre</abbr>
       <expan>compendre</expan>
      </choice>
     </l>
     <l n="43" xml:id="C024-l43"> Vullau ab deu fer <choice>
      <abbr>ꝗ</abbr>
       <expan>que</expan>
      </choice> si fe los basta </l>
     <l n="44" xml:id="C024-l44"> Sia remes lo peccat damor folla. </l>
    </lg>
   </div>
